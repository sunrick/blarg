<h2> title </h2>
<%= form_tag( @action, method: @http_verb) do %>
	<div>
		<%= label_tag(:title, "Title: ") %>
		<%= text_field_tag(:title, @post.title, size:40, maxlength:40) %>
	</div>

	<div>
		<%= label_tag(:tags, "Tags: ") %>
		<%= text_field_tag(:tags, @tags, size: 40) %>
	</div>
	<div>
		<%= label_tag(:content, "Content: ") %>
		<br>
		<%= text_area_tag(:content, @post.content, rows:20, cols:80) %>
	</div>
	<div><%= submit_tag 'Save' %></div>
<% end %>
